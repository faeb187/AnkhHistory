{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "lib": ["dom", "es6"],
    "module": "es6",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "dist",
    "paths": {
      "app": ["app"],
      "core": ["core"],
      "styl": ["styl"],
      "types": ["types"],
      "uis": ["uis"],
      "utils": ["utils"]
    },
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": ["src"]
}
