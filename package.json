{
  "name": "ankh",
  "version": "0.0.1",
  "description": "modern lightweight and flexible UI/UX framework.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/faeb187/ankh.git"
  },
  "keywords": [
    "UI",
    "UX",
    "framework",
    "mobile first",
    "content first",
    "typescript",
    "html5",
    "stylus"
  ],
  "author": "faeb187",
  "license": "MIT",
  "test": "jest --verbose --forceExit --coverage --detectOpenHandles --passWithNoTests",
  "jest": {
    "preset": "ts-jest",
    "modulePathIgnorePatterns": [
      "dist"
    ]
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "gql": "node ../graphql-server.js",
    "lint": "eslint . --ext .ts",
    "start": "./start.sh",
    "watch": "npm-watch"
  },
  "watch": {
    "start": {
      "patterns": [
        "src"
      ],
      "extensions": [
        "ts",
        "styl"
      ]
    }
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-http": "^1.5.17",
    "graphql": "^15.5.1",
    "hammerjs": "^2.0.8",
    "hotkeys": "^1.0.0",
    "material-colors": "^1.2.6",
    "material-design-icons": "^3.0.1",
    "twodollars": "^1.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.3",
    "@types/stylus": "^0.48.36",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "css-loader": "^6.2.0",
    "eslint": "^7.31.0",
    "graphql-tag": "^2.12.5",
    "http-server": "^13.0.2",
    "jest": "^27.0.6",
    "npm-watch": "^0.10.0",
    "poststylus": "^1.0.1",
    "prettier": "github:helixbass/prettier#prettier-v2.1.0-dev.100-gitpkg",
    "rucksack-css": "^1.0.2",
    "rupture": "^0.7.1",
    "style-loader": "^3.3.0",
    "stylus-native-loader": "^1.4.5",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.4",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.5",
    "webpack": "^5.46.0",
    "webpack-cli": "^4.7.2"
  }
}
