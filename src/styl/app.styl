html
  fs $fs
  fw $fw-normal
  ff $ff

body
  w     100vw

a
  curs  pointer

i
  fs    3rem

img
  maxw  100%

b
  fw    700

h2
  fw    700
  fs    1rem

small
  fs    .9rem

  +above( 'xl' )
    fs  .9rem

*
  & [data-fx= 'in']
    dsp flex

  & table[data-fx= 'in']
    dsp table

  & [data-fx= 'out' ]
    dsp none

#ankh
  fx    1 1 auto
  
  > div
    fx  1 1 auto

#cnt
  fx    1 1 auto
  w     100%
  fxai  center

#h
  w     100%

#m
  w     100%
  mrgb  1rem
  mrgt  1rem

#f
  fxd   row
  fx    0 1 auto
  fxjc  space-between
  fxai  center
  pdg   0 2rem
  w     100vw - 4rem

// BeKB
#cnt
#f
  w $w-cnt

#h
  fxai  center
  pos relative
  w 100vw

  #hTop
    brdt 8px $color-01 solid
    fxd row
    fxjc space-between
    h 6.5rem
    pos relative
    w 90vw

    #logo
      mrgt $mrg
      w 12rem

    #hTopRight
      w 24rem

      #profile
        bc $color-01
        c $white
        pdg 2 * $pdg 0
        pdgl 2 * $pdg

        #profileInner
          fxd row

          #profileUsername
            fs $fs-big
            fw $bold
            lh 21px
      
      #search
        w 100%

#toolbar
  fxd row
  fxjc flex-end
  fxai center
  mrg $mrg ($mrg / 2)