#back
  fxai  center
  h     100vh
  pos   absolute
  w     100vw

#front
  fxai  center
  tra   all .1s ease-in
  trf   translate3d(0, 0, 0)
  ovrx  hidden

  &.from-left
    flr grayscale(.5)
    trf translate3d(100vw, 0, 0)

  &.from-right
    trf translate3d(-100vw, 0, 0)

  &.from-top
    trf translate3d(0, 100%, 0)

  &.from-bottom
    trf translate3d(0, -100%, 0)


