.ui-table
  tbll fixed
  w 100%

  thead
    pos absolute
    lft -9999px
    top -9999px

    th
      fs $fs-small
      ta left

  tbody
    dsp block

    tr
      brd 1px $grey-03 solid
      brad 5px
      dsp flex
      fxd row
      fxw wrap
      mrg $mrg auto
      pos relative
      pdg $pdg
      w 350px

      td
        dsp block
        pos relative
        pdg 'calc(%s / 2) %s' % $pdg
        fx 1 0 100%
        ta right

        &.right
          ta right

        &:after
          lft 0
          pos absolute
          cnt attr(data-lang-rendered)
          fs $fs-small
          fw $fw-bold

        &[data-currency]:before
          cnt attr(data-currency)
          txtt uppercase
          mrgr 3px

        &:last-child
          pos absolute
          top $mrg
          rgt $mrg
          pdg 0

        img
          w $svg-w
          h $svg-h

+above('m')
  .ui-table
    tbody
      tr
        mrg auto
        mrgt $mrg
        w 550px

        td
          fx 0 1 'calc(50% - %s)' % $pdg
          pdgt 'calc(%s * 2)' % $pdg
          ta left

          &:not(:first-child)
            brdb 1px $grey-03 solid

          &:after
            btm 25px // todo

          &:first-child
            pos absolute auto 0 0 auto


+above('l')
  .ui-table
    th
    td
      ovr hidden
      tovr ellipsis
      ws nowrap
    
      &[data-date]
      &[data-currency]
      &.right
        ta right

      &:last-child
        pdgr 0

    thead
      dsp table-header-group
      pos static

      th
        pdg $pdg 0 'calc(%s / 2)' % $pdg
        pdgr $pdg 
      
    tbody
      dsp table-row-group

      tr
        brd none
        brad none
        brdt 1px $grey-03 solid
        dsp table-row

        td
          dsp table-cell
          pdg $pdg 0
          pdgr $pdg 
          ta left

          &:after
            dsp none
            flt none

          &:first-child
            pos relative
            brd none

          img
            pos absolute 0
            mrg auto
            w $svg-w
            h $svg-h

          &:last-child
            pos relative 0

            img
              lft auto
              w $svg-w-small
              h $svg-h-small