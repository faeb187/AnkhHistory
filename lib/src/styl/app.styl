// GENERAL
html
  fs $fs
  fw $fw-normal
  ff $ff

body
  w     100vw

a
  curs  pointer

i
  fs    3rem

img
  maxw  100%

b
  fw    700

h2
  fw    700
  fs    1rem

small
  fs    .9rem

  +above( 'xl' )
    fs  .9rem

// FX
*
  & [data-fx= 'in']
    dsp flex

  & table[data-fx= 'in']
    dsp table

  & [data-fx= 'out' ]
    dsp none

// ANKH CONTAINER
#ankh
  fx    1 1 auto
  
  > div
    fx  1 1 auto

// CONTENT
// header/main/footer wrapper
#cnt
  fx    1 1 auto
  w     100%
  fxai  center

// HEADER
#h
  w     100%

// MAIN
#m
  w     100%
  mrgb  1rem
  pdgt  13px

// FOOTER
#f
  fxd   row
  fx    0 1 auto
  fxjc  space-between
  fxai  center
  pdg   0 2rem
  w     calc( 100vw - 4rem )

// BeKB
#cnt
#f
  w $w-cnt

#h
  brdt 8px $color-01 solid
  fxai  center
  pdg   $pdg 0
  pos relative

  #hTop
    fxd row
    fxjc space-between
    pdg 'calc(%s * 2)' % $pdg
    w 100%

    #logo
      w 20rem

  #profile
    bc: $color-01;
    c: md-white;
    pdg: 'calc(2 * %s)' % $pdg;
    position: absolute 0 0 auto auto;

#toolbar
  fxd row
  fxjc flex-end
  fxai center
  mrgb 'calc(2 * %s)' % $mrg